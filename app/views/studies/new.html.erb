<div class="page-header">
  <h1>Add Study</h1>
</div>

<% if @study.errors.any? %>
  <% @study.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_study" class="form-horizontal" method="post" enctype="multipart/form-data">
  <!-- Label and input for user_id -->
<!--   <div class="form-group">
    <label for="user_id" class="col-sm-2 control-label">
      User
    </label>
    <div class="col-sm-10">
      <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @study.user_id %>">
    </div>
  </div> -->

  <!-- Label and input for subject -->
  <div class="form-group">
    <label for="subject" class="col-sm-2 control-label">
      Subject
    </label>
    <div class="col-sm-10">
      <input type="text" id="subject" name="subject" placeholder="Subject" class="form-control" value="<%= @study.subject %>">
    </div>
  </div>

  <!-- Label and input for accession -->
  <div class="form-group">
    <label for="accession" class="col-sm-2 control-label">
      Accession
    </label>
    <div class="col-sm-10">
      <input type="text" id="accession" name="accession" placeholder="Accession" class="form-control" value="<%= @study.accession %>">
    </div>
  </div>

  <!-- Label and input for diagnosis -->
  <div class="form-group">
    <label for="diagnosis" class="col-sm-2 control-label">
      Diagnosis
    </label>
    <div class="col-sm-10">
      <textarea id="diagnosis" name="diagnosis" placeholder="Diagnosis" class="form-control" rows="3"><%= @study.diagnosis %></textarea>
    </div>
  </div>

  <!-- Label and input for image -->
  <div class="form-group">
    <label for="image" class="col-sm-2 control-label">
      Image
    </label>
    <div class="col-sm-10">
      <input type="file" id="image" name="image" class="form-control" value="<%= @study.image %>">
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    </div>
  </div>

  <!-- Label and input for clinical_history -->
  <div class="form-group">
    <label for="clinical_history" class="col-sm-2 control-label">
      Clinical history
    </label>
    <div class="col-sm-10">
      <textarea id="clinical_history" name="clinical_history" placeholder="Clinical history" class="form-control" rows="3"><%= @study.clinical_history %></textarea>
    </div>
  </div>

 <!--  <!-- Label and input for date -->
  <!-- <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label for="date">
          <input type="checkbox" id="date" name="date" value="1" <%= "checked" if @study.date %>>
          Date
        </label>
      </div>
    </div>
  </div> -->

  <!-- Label and input for category_id -->
  <div class="form-group">
    <label for="category_id" class="col-sm-2 control-label">
      Category
    </label>
    <div class="col-sm-10">
      <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @study.category_id %>">
    </div>
  </div>

  <!-- Label and input for body_part_id -->
  <div class="form-group">
    <label for="body_part_id" class="col-sm-2 control-label">
      Body part
    </label>
    <div class="col-sm-10">
      <%= select_tag :body_part_id, options_from_collection_for_select(BodyPart.all, :id, :part, @study.body_part_id), :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Study" class="btn btn-primary">
    </div>
  </div>
</form>
