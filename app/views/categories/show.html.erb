<div class="page-header">
  <h1><%= @category.content %></h1>
</div>

<form>
  <input name="diagnosis" placeholder="Diagnosis" class="form-control" value="<%=@diagnosis%>">
  <input name="subject" placeholder="Subject" class="form-control" value="<%=@subject%>">
  <input type="submit" value="Filter" class="btn btn-primary">
</form>


<dl class="dl-horizontal">
</dl>
<table class="table table-striped table-hover"
  <thead>
    <tr>
      <th>Diagnosis</th>
      <th>Image</th>
      <th>Reference Number</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @category.studies.each do |study| %>
      <tr>
        <td><%= study.diagnosis%></td>
        <td><img src="<%= study.image %>" width="60"></td>
        <td><%= study.accession%></td>
        <!-- <td><%= study.date %></td> -->
        <!-- <td><%= study.category_id %></td>
        <td><%= study.body_part_id %></td> -->
        <td>
          <a href="/studies/<%= study.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/studies/<%= study.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td><!--
          <a <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, "delete_study/#{study.id}", data: { confirm: 'Are you sure?'}, :class => "btn btn-danger" %> -->
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

