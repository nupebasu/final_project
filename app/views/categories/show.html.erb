<div class="page-header">
  <h1><%= @category.content %></h1>
</div>

  <div class="form-group">
    <label for="category_id" class="col-sm-2 control-label">
      Associate Case
    </label>
    <div class="col-sm-10">
      <input type="integer" id="category_id" name="category_id" placeholder="Case ID" class="form-control" value="">
    </div>
  </div>


<dl class="dl-horizontal">
  <dt>Content</dt>
  <dd><%= @category.content %></dd>
</dl>
<table class="table table-striped table-hover">
<% @category.studies.each do |study| %>

<div>
<%= study.diagnosis %>
</div>

<% end %>

